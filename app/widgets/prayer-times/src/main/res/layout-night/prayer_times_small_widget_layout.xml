<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Watermark Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_watermark"
        android:scaleType="fitCenter" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Dates Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Hijri Date (Left in LTR, Right in RTL) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/hijri_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/hijri_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajab"
                    android:textSize="14dp"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/hijri_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1446"
                    android:textSize="12dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Gregorian Date (Right in LTR, Left in RTL) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/gregorian_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/gregorian_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="February"
                    android:textSize="14dp"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/gregorian_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025"
                    android:textSize="12dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Spacer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="" />

        <!-- Next Prayer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <!-- Prayer name and "after:" in horizontal layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/next_prayer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fajr"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/next_prayer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" after:"
                    android:textSize="18dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <Chronometer
                android:id="@+id/next_prayer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:format="in %s" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
