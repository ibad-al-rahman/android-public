<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@android:color/black"
>
    <!-- Left Half - Prayer Names and Times -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
    >
        <LinearLayout
            android:id="@+id/prayer_row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
        >
            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fajr"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/prayer_row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
        >
            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sunrise"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/prayer_row_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
        >
            <TextView
                android:id="@+id/text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dhuhr"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/prayer_row_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
        >
            <TextView
                android:id="@+id/text4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asr"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/prayer_row_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
        >
            <TextView
                android:id="@+id/text5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Maghrib"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
            <TextView
                android:id="@+id/time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/prayer_row_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
        >
            <TextView
                android:id="@+id/text6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Isha"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
            <TextView
                android:id="@+id/time6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14sp"
                android:textColor="@android:color/white"
            />
        </LinearLayout>
    </LinearLayout>
    
    <!-- Vertical Divider -->
    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        android:text=""
    />
    
    <!-- Right Half - Date Display -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="8dp"
    >
        <!-- Watermark Background -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_watermark"
            android:scaleType="center"
        />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
        >
            <!-- Dates Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
            >
                <!-- Gregorian Date (Left) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                >
                    <TextView
                        android:id="@+id/gregorian_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                    />
                    <TextView
                        android:id="@+id/gregorian_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="February"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                    />
                    <TextView
                        android:id="@+id/gregorian_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                    />
                </LinearLayout>
                
                <!-- Hijri Date (Right) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                >
                    <TextView
                        android:id="@+id/hijri_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                    />
                    <TextView
                        android:id="@+id/hijri_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rajab"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                    />
                    <TextView
                        android:id="@+id/hijri_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1446"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                    />
                </LinearLayout>
            </LinearLayout>
            
            <!-- Spacer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text=""
            />
            
            <!-- Next Prayer Info at Bottom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:paddingBottom="8dp"
            >
                <!-- Prayer name and "after:" in horizontal layout -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                >
                    <TextView
                        android:id="@+id/next_prayer_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fajr"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                    />
                    <TextView
                        android:id="@+id/next_prayer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" after:"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                    />
                </LinearLayout>
                <Chronometer
                    android:id="@+id/next_prayer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:format="in %s"
                />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
